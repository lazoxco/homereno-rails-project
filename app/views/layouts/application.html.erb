<!DOCTYPE html>
<html>
  <head>
    <title>HomeReno | Get Sh*t Done</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">HomeReno</a>
        </div>

        <ul class="nav navbar-nav navbar-left">
            
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "All Projects", projects_path %></li>
            <li><%= link_to "Logout", :logout, :class => 'navbar-link', method: :delete %></li>
          <% else %>
            <li> <%= link_to "Sign up", :signup, :class => 'navbar-link'  %></li>
            <li> <%= link_to "Login", :login, :class => 'navbar-link'  %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= @error %>

      <%= yield %>
    </div>
  </body>
</html>
